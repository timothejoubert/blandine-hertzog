{
  "id": "project_page",
  "label": "Project page",
  "format": "page",
  "repeatable": true,
  "status": true,
  "json": {
    "Main": {
      "title": {
        "type": "Text",
        "config": {
          "label": "Title",
          "placeholder": ""
        }
      },
      "link_label": {
        "type": "Text",
        "config": {
          "label": "Link label",
          "placeholder": ""
        }
      },
      "archived": {
        "type": "Boolean",
        "config": {
          "label": "Archived",
          "placeholder_false": "false",
          "placeholder_true": "true",
          "default_value": false
        }
      },
      "description": {
        "type": "StructuredText",
        "config": {
          "label": "Short description",
          "placeholder": "",
          "allowTargetBlank": true,
          "multi": "paragraph,strong,em,hyperlink"
        }
      },
      "date": {
        "type": "Date",
        "config": {
          "label": "Date",
          "placeholder": ""
        }
      },
      "content": {
        "type": "StructuredText",
        "config": {
          "label": "Content",
          "placeholder": "",
          "allowTargetBlank": true,
          "single": "paragraph,preformatted,heading1,heading2,heading3,heading4,heading5,heading6,strong,em,hyperlink,image,embed,list-item,o-list-item,rtl"
        }
      },
      "attributes": {
        "type": "Group",
        "config": {
          "label": "attributes",
          "repeat": true,
          "fields": {
            "label": {
              "type": "Text",
              "config": {
                "label": "Label",
                "placeholder": ""
              }
            },
            "content": {
              "type": "Text",
              "config": {
                "label": "Content",
                "placeholder": ""
              }
            }
          }
        }
      },
      "uid": {
        "config": {
          "label": "UID"
        },
        "type": "UID"
      },
      "media": {
        "type": "Image",
        "config": {
          "label": "Thumbnail",
          "constraint": {},
          "thumbnails": []
        }
      },
      "external_url": {
        "type": "Text",
        "config": {
          "label": "External url",
          "placeholder": ""
        }
      }
    },
    "SEO & Metadata": {
      "meta_description": {
        "config": {
          "label": "Meta Description",
          "placeholder": "A brief summary of the page"
        },
        "type": "Text"
      },
      "meta_image": {
        "config": {
          "constraint": {
            "height": 1260,
            "width": 2400
          },
          "label": "Meta Image",
          "thumbnails": []
        },
        "type": "Image"
      },
      "meta_title": {
        "config": {
          "label": "Meta Title",
          "placeholder": "A title of the page used for social media and search engines"
        },
        "type": "Text"
      }
    }
  }
}
